@{
    string activeNav = ViewData["Active"] as string;
}
<div>
    <div class="d-none d-lg-flex shadow bg-white">
        <nav class="navbar navbar-expand-lg navbar-light ">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse bg-white" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto nav-underline bg-white">
                    <li class="nav-item ">
                        <a class="nav-link  @(activeNav=="Dashboard"?"active":"")" asp-action="ProviderDashboard" asp-controller="Provider">Dashboard </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(activeNav=="Invoicing"?"active":"")">Invoicing</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(activeNav=="Scheduling"?"active":"")" asp-action="ProvidersSchedule" asp-controller="Provider">My Schedule</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(activeNav=="Profile"?"active":"")" asp-action="Profile" asp-controller="Provider">My Profile</a>
                    </li>

                </ul>

            </div>
        </nav>

    </div>

    <div class="offcanvas offcanvas-start d-lg-none" tabindex="-1" id="offcanvasSidebar" aria-labelledby="offcanvasSidebarLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasSidebarLabel"><img style="width:70px;" class="largeLogo align-content-center" src="~/images/logo.png" alt="Logo" /></h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body aside-cont">
            <ul class="list-group">
                <li class="list-group-item @(activeNav=="Dashboard"?"nav-active":"") ">
                    <a class="nav-link  fs-5 fw-semibo text-dark ps-4" id="Dashboard-Page" asp-action="ProviderDashboard" asp-controller="Provider">Dashboard</a>
                </li>
                <li class="list-group-item  @(activeNav=="Invoicing"?"nav-active":"") ">
                    <a class="nav-link fs-5 text-dark ps-4" id="Location-Page">Invoicing</a>
                </li>
                <li class="list-group-item   @(activeNav=="Scheduling"?"nav-active":"")">
                    <a class="nav-link fs-5 text-dark ps-4" id="Location-Page" asp-action="ProvidersSchedule" asp-controller="Provider">My Schedule</a>
                </li>
                <li class="list-group-item  @(activeNav=="Profile"?"nav-active":"") ">
                    <a class="nav-link fs-5  text-dark ps-4" id="Profile-Page" asp-action="Profile" asp-controller="Provider">My Profile</a>
                </li>

            </ul>
        </div>
    </div>

</div>
