@{
    Layout = "_AdminPhysicianHeader";
}
<div>
  
    <div class="d-flex justify-content-center mt-3">
        <div class="container">

            <div class="d-inline-flex justify-content-between w-100">

                <h3 class="m-2">Create Role</h3>
                <div class="ml-auto">

                    <button class="  back-btn btn-outline-info back mt-2 rounded p-2 "
                            onclick="back()">
                        &lt Back
                    </button>
                </div>
            </div>
            <br />


            <div class="bg-white rounded shadow p-4 mt-3">
            
                <p style="font-weight: bold; font-size:1.5rem">Details</p>
                <br />
                <form class="CreateRoleForm">

             
                <div class="row">                    
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="text"                                      
                                       class="form-control "
                                       id="contact"
                                       name="RoleName"
                                       placeholder="name@example.com" required />
                                <label for="floatingInput">Role Name</label>
                            </div>

                        </div>

                    <div class="col-md-6">
                        <select style="height:55px;" name="AccountType" class="form-select SelectACType" aria-label="Default select example">
                            <option value="0" selected>All</option>
                            <option value="1">Admin</option>
                            <option value="2">Physician</option>
                            <option value="3">Patient</option>
                        </select>

                    </div>                  
                </div>
                    <div class="d-flex flex-wrap " id="menu">                        
                    
                </div>
                <div class="w-100 d-flex justify-content-end">
                        <button type="button" class="btn btn-info text-white m-2" onclick="saveRole()">Save</button>
                        <button type="button" class="btn btn-outline-info m-2 ">Cancel</button>
                    

                </div>
                </form>
            </div>

        </div>
    </div>

</div>

<div class="modal fade" id="warning_model" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

           
                <div class="modal-body">
                    <br />
                    <input type="number"
                           hidden
                           name="delete_id"
                           id="deleteid" />
                    <div class="d-flex flex-column align-items-center justify-content-center">
                        <div class="warning_icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="85" height="85" fill="currentColor" class="bi bi-exclamation-circle-fill war-i" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4m.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2" />
                            </svg>
                        </div>
                        <br />
                    <h4 class="my-3"> Please select appropreate role</h4>
                        
                    </div>
                    <br />
                    <div class="d-flex justify-content-center">
                        <button type="button" class="btn btn-outline-info m-2" data-dismiss="modal">OK</button>
                    </div>
                    <br />
                </div>
        </div>
    </div>
</div>

<script>
    var actype = $('.SelectACType').val();
    $(document).ready(function () {
        $('#menu').empty();

        $.ajax({
            method: "GET",
            url: "/Admin/GetMenus",
            data: { actype: actype },
            success: function (result) {
                result.forEach(function (res) {
                    $('#menu').append('<div class="form-check ms-2 me-2 " ><input name="selectedMenu" class="form-check-input" type = "checkbox"  value = "' + res.id + '"  ><label class="form-check-label" for= "flexCheckDefault" >' + res.name + '</label>');
                });
               

            }
        });          


        // $(document).on("click", ".contact", OpenContactProvider);


    });


    $('.SelectACType').change(function () {
        actype = $('.SelectACType').val();
        $('#menu').empty();
        $.ajax({
            method: "GET",
            url: "/Admin/GetMenus",
            data: { actype: actype },
            success: function (result) {

                result.forEach(function (res) {
                    $('#menu').append('<div class="form-check ms-2 me-2 " ><input name="selectedMenu" class="form-check-input" type = "checkbox" value = "' + res.id + '" ><label class="form-check-label" for= "flexCheckDefault" >' + res.name + '</label>');
                });


            }
        });

    });
   
    function saveRole() {

        if ($('.SelectACType').val() == "0") {           

            const warning = new bootstrap.Modal(document.getElementById("warning_model"), {});
            warning.show(); 
        }
        else
        {
            $.ajax({
                method: "Post",
                url: "/Admin/CreateRole",
                data: $('form.CreateRoleForm').serialize(),
                success: function (result) {
                    window.location.reload();
                }
            });
        }
       
    }
</script>
