@model DataLayer.DTO.ViewDocumentList
@{
    Layout = "_Patientdashboard";

}

<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
<link rel=”stylesheet” href=”https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css” />
<div class="">
    <div class="p-2">
        <ul class="nav ">
            <li style=" cursor: pointer; " class="nav-item custom-tab">

                <a style="color: #0dcaf0;" class="nav-link  text-decoration-none">Dashboard </a>
            </li>
            <li style=" cursor: pointer;" class="nav-item">
                <a asp-action="PatientProfile" asp-asp-controller="Patient" class="nav-link text-decoration-none text-dark">Profile</a>
            </li>
        </ul>
    </div>

    <div class=" d-flex justify-content-center bg-light ">

        <div class="container ">
            <div class="d-inline-flex justify-content-between w-100">
                <h2 class="m-2">Documents</h2>
                <div class="ml-auto">
                    <div class="d-flex justify-content-end">
                        <button class="back-btn rounded" onclick="back()">&lt Back</button>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-3">

                <div class="p-2">


                    <p>Patient Name</p>
                    <p><span class="text-info">@Model.Name</span> </p>
                    <p>Check here for any files that you or the doctors of your subsequesnts requestors have attached for you to review</p>

                    <form asp-action="addDocument"  method="post" enctype="multipart/form-data">
                        <div class="row mb-3">
                            <div class="col-md-11 ">
                                <div class="d-flex"
                                     onclick="document.getElementById('choose-file').click()"
                                     style="cursor: pointer">
                                    <label class="col-8 col-md-10 col-lg-11 upload bg-light"
                                           id="fileLabel">Select File</label>
                                    <button type="button" class="col-4 col-md-2 col-lg-1 btn btn-info uploadbtn text-white">
                                        
                                        Upload
                                    </button>
                                    <input name="file" type="file" style="display: none" id="choose-file" />

                                </div>
                            </div>
                            <div class="col-md-1">
                                <button type="submit" class="btn btn-info text-white submit">Save</button>
                            </div>

                        </div>
                    </form>
                    <div class="d-inline-flex w-100 p-2">
                        <h4>Documents</h4>
                        <div class="flex-grow-1 d-flex justify-content-end">
                            <button class="btn btn-outline-info "
                                    onclick="downloadSelectedFiles()">
                                Download All
                            </button>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table mt-3">
                            <thead class="bg-light">
                                <tr>
                                    <th>    <input type="checkbox" id="checkAll" data-rows-group-id="users"></th>
                                    <th> </th>
                                    <th>Uploader</th>
                                    <th>Updeted Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Document)
                                {
                                    <tr>


                                        <td> <input type="checkbox" class="check fileCheckbox" name="checkdoc" data-rows-group-id="users" /></td>

                                        <td>
                                            <p>  @item.FileName.ToString().Split('\\').Last()</p>
                                        
                                        </td>
                                        <td>@Model.Name</td>
                                        <td>@item.CreatedDate.ToShortDateString()</td>
                                        <td class="text-info">
                                            <a asp-route-Download="@item.DocumentId" asp-action="Download">
                                                <button class=" btn btn-outline-info">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cloud-arrow-down" viewBox="0 0 16 16">
                                                        <path fill-rule="evenodd" d="M7.646 10.854a.5.5 0 0 0 .708 0l2-2a.5.5 0 0 0-.708-.708L8.5 9.293V5.5a.5.5 0 0 0-1 0v3.793L6.354 8.146a.5.5 0 1 0-.708.708z" />
                                                        <path d="M4.406 3.342A5.53 5.53 0 0 1 8 2c2.69 0 4.923 2 5.166 4.579C14.758 6.804 16 8.137 16 9.773 16 11.569 14.502 13 12.687 13H3.781C1.708 13 0 11.366 0 9.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383m.653.757c-.757.653-1.153 1.44-1.153 2.056v.448l-.445.049C2.064 6.805 1 7.952 1 9.318 1 10.785 2.23 12 3.781 12h8.906C13.98 12 15 10.988 15 9.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 4.825 10.328 3 8 3a4.53 4.53 0 0 0-2.941 1.1z" />
                                                    </svg>
                                                </button>
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>



    </div>
</div>

<script>

    $("#checkAll").click(function () {
        $(".check").prop('checked', $(this).prop('checked'));
    });

    function downloadSelectedFiles() {

        var selectedFiles = document.querySelectorAll('input[name="checkdoc"]:checked');
        var fileUrls = [];
        var flag = 0;
        // Iterate through selected checkboxes and extract file URLs
        selectedFiles.forEach(function (checkbox) {
            flag = 1;
            var row = checkbox.closest('tr');
            var fileUrl = row.querySelector('a').getAttribute('href');

            var link = document.createElement('a');
            link.href = fileUrl;
            link.download = '';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);

        });


        if (flag == 0) {
            toastr.error("Please select document first");
        }
    }
    </script>