<!-- Request To Admin  Modal -->
<div class="modal fade" id="RequestAdmin" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div style="background-color:#0dcaf0; color:white;" class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Request To Administrator</h5>
                <button type="button" class="close btn btn-lg text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="RequestToAdmin">
                <div class="modal-body">

                    <p>Need to send message to edit </p>

                    <div class="form-floating">
                        <textarea class="form-control"
                                  placeholder="Leave a comment here"
                                  id="floatingTextarea"
                                  name="Message"
                                  style="height: 100px" required></textarea>
                        <label for="floatingTextarea">Message</label>
                    </div>
                </div>
                <div class="modal-footer border-0">

                    <button  onclick="SendRequest()" type="button" class="btn btn-info text-white">Send</button>


                    <button type="button" class="btn btn-outline-info " data-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function SendRequest(){
        $.ajax({
            method: "POST",
            url: '@Url.Action("SendRequestToAdminForProfile", "Provider")',
            data: $('form.RequestToAdmin').serialize(),
            success: function (result) {
                window.location.reload();
            }

        });
    }

